[user]
	name = srimajji
	email = sri.majji@outlook.com

[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input

[push]
	default = simple

[alias]
	d = diff --word-diff
	s = status -sb
	p = fetch --prune
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	b = branch -l
	r = reset --h

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = green

[color "status"]
	added = green
	changed = yellow
	updated = magenta bold
	untracked = red bold
	header = cyan bold
